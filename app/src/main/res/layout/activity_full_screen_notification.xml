<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.loyaltyglobal.util.Constants"/>
        <variable
            name="mData"
            type="com.loyaltyglobal.data.source.localModels.userPassResponse.Notification" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/fragmentClickable">

        <FrameLayout
            android:id="@+id/fl_notification_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_marginTop="@dimen/dp_32"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_notification_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/view_text_bg"
                setStoriesFullScreenBackGround="@{mData}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@color/white" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_brand"
                android:layout_width="@dimen/dp_31"
                android:layout_height="@dimen/dp_31"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_47"
                android:background="@drawable/ic_round"
                setCircleImage="@{mData.brandLogo}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/dummy_brand_logo"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_brand_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_16"
                android:elevation="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:maxLines="1"
                android:textColor="?heading"
                android:textSize="@dimen/sp_14"
                android:text="@{mData.branName}"
                app:layout_constraintBottom_toBottomOf="@id/img_brand"
                app:layout_constraintEnd_toStartOf="@+id/img_close_notification"
                app:layout_constraintStart_toEndOf="@id/img_brand"
                app:layout_constraintTop_toTopOf="@id/img_brand"
                tools:text="Burger King" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_close_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/sp_14"
                android:background="@drawable/default_ripple_round"
                android:padding="@dimen/dp_8"
                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toBottomOf="@id/img_brand"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_brand"
                app:tint="?heading"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_notification_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dp_11"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/dp_8"
                android:text="@{mData.description}"
                android:visibility="@{mData.type.toString().equals(Constants.NOTIFICATION_TYPE_TEXT) ? View.VISIBLE : View.GONE}"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_36"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_brand"
                tools:text="Burger King" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_notification_image"
                setImage="@{mData.imageUrl}"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dp_11"
                android:gravity="center"
                android:textSize="@dimen/sp_36"
                android:visibility="@{mData.type.toString().equals(Constants.NOTIFICATION_TYPE_IMAGE) ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_brand"
                tools:text="Burger King" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_visit_link"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_40"
                android:background="@drawable/shape_visit_button"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_visit_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="@string/visit_link"
                    android:visibility="@{mData.linkUrl != null ? View.VISIBLE : View.GONE}"
                    android:tint="?heading"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintBottom_toBottomOf="@id/img_visit_icon"
                    app:layout_constraintEnd_toStartOf="@id/img_visit_icon"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/img_visit_icon" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_visit_icon"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_10"
                    android:src="@drawable/ic_arrow_next"
                    android:tint="?heading"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@id/txt_visit_link"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>