<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?main_background"
    android:clickable="true"
    android:focusable="true"
    tools:context=".ui.main.view.fragments.DealsAndOffersFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_explore_deals_offers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_5" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_no_deals_offer_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:src="@drawable/icon_deals_offers" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:fontFamily="@font/poppins_semi_bold"
            android:gravity="center"
            android:text="@string/no_deal_available"
            android:textColor="?heading"
            android:textSize="@dimen/sp_18" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="@string/many_exciting_deals_will_soon_be_available"
            android:textColor="?paragraph"
            android:textSize="@dimen/sp_13" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>
