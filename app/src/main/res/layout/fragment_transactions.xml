<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/fragment_clickable_theme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.view.fragment.TransactionsFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_transaction"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?black_white"
            app:contentInsetLeft="@dimen/dp_0"
            app:contentInsetStart="@dimen/dp_0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_transaction_back"
                    android:layout_width="@dimen/dp_38"
                    android:layout_height="@dimen/dp_38"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_12"
                    android:background="@drawable/default_ripple_round"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/ic_icon_back"
                    android:tint="?heading" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/SemiBold24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_2"
                    android:gravity="start|center"
                    android:text="@string/transactions" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.Toolbar>

        <View
            android:id="@+id/view_tb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="?main_divider"
            app:layout_constraintTop_toBottomOf="@id/tb_transaction" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_no_transaction"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:src="@drawable/ic_notification_not_found"
            app:layout_constraintBottom_toTopOf="@id/txt_no_transaction"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_tb"
            app:layout_constraintVertical_chainStyle="packed" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_no_transaction"
            style="@style/white40PoppinSemiBold18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center"
            android:text="@string/no_notification"
            android:textColor="?heading"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_no_transaction" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_no_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="img_no_transaction,txt_no_transaction" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_transaction"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_tb" />

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dp_4"
            android:theme="@style/ProgressBarThemeDashboard"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
