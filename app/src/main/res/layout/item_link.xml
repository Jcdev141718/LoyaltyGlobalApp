<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="link"
            type="com.loyaltyglobal.data.source.localModels.LinkKeyValueModel" />
    </data>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_link"
        style="@style/LinkMedium12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_4"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginVertical="@dimen/dp_4"
        app:linkWithUnderline="@{link.key}"
        tools:text="@string/dummy_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_link"
        app:layout_constraintTop_toBottomOf="@+id/txt_email_address" />
</layout>